<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty scope="context" name="appName" source="spring.application.name"/>

    <springProfile name="dev">
        <logger name="com.nexasolutions" level="DEBUG"/>

        <appender name="CONSOLE_DEV" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
            </encoder>
        </appender>

        <appender name="FILE_DEV" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>logs/api_dev.log</file>

            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>logs/api_dev.%d{yyyy-MM-dd}.log</fileNamePattern>
                <maxHistory>3</maxHistory>
            </rollingPolicy>

            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE_DEV" />
            <appender-ref ref="FILE_DEV" />
        </root>
    </springProfile>


    <springProfile name="prod">

        <appender name="FILE_PROD" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_FILE_LOCATION}/nexa_api_log.json</file>

            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_FILE_LOCATION}/nexa_api_log.%d{yyyy-MM-dd}.json</fileNamePattern>
                <maxHistory>30</maxHistory>
                <totalSizeCap>1GB</totalSizeCap>
            </rollingPolicy>

            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"app_name":"${appName}"}</customFields>
            </encoder>
        </appender>

        <appender name="ASYNC_FILE_PROD" class="ch.qos.logback.classic.AsyncAppender">
            <appender-ref ref="FILE_PROD" />
            <queueSize>500</queueSize>
            <discardingThreshold>20</discardingThreshold>
            <includeCallerData>false</includeCallerData>
            <neverBlock>true</neverBlock>
        </appender>

        <root level="INFO">
            <appender-ref ref="ASYNC_FILE_PROD" />
        </root>
    </springProfile>

    <springProfile name="default">
        <include resource="org/springframework/boot/logging/logback/base.xml"/>
    </springProfile>

</configuration>